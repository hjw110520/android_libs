<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/titlebar_leftbtn"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/simple_margin20"
        android:paddingRight="@dimen/simple_margin20"
        android:contentDescription="@string/app_name"
        android:background="@null" 
        android:src="@drawable/home_left_arrow"
        android:scaleType="centerInside"
        />
    <TextView
        android:id="@+id/titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/title_bar_textcolor"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=""
        />
	
	<ImageButton
	    android:layout_alignParentRight="true"
        android:id="@+id/titlebar_rightbtn"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/simple_margin20"
        android:paddingRight="@dimen/simple_margin20"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:background="@null"
        android:scaleType="centerInside"/>
	<TextView
	    android:layout_alignParentRight="true"
        android:id="@+id/titlebar_rightText"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/simple_margin20"
        android:paddingRight="@dimen/simple_margin20"
        android:layout_height="match_parent"
        android:textColor="@color/title_bar_textcolor"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:layout_centerInParent="true"
        android:text=""/>
</RelativeLayout>
